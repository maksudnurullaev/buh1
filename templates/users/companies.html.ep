% my $companies = stash 'companies';
% if ( $companies ) {
  <h3><%= ml('Companies') %></h3>
  <ul>
   % for my $company_id(keys %{$companies} ) {
    <li>
     %= tag 'a', href => "/companies/edit/$company_id", $companies->{$company_id}{name} ; 
     <sup>
     %= tag 'a', href => "/users/remove_company/$user_id?company=$company_id", ml('Delete') ;
     </sup>
    </li>
   % }
  </ul>
 % }
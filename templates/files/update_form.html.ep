<div class="toolbar">
 % my $fileid = param 'fileid' ;
 %= form_for "/$controller/files_update_desc/$payload?fileid=$fileid"  => ( method => 'POST') => begin
 %= hidden_field "redirect_to" => "/$controller/files_update/$payload?fileid=$fileid"
 <table class='colortable'>
  <tr>
   <td class='tar'> 
    %= ml 'Description' 
   </td>
   <td>
    %= text_area 'file.desc' => stash('file_desc') ;
   </td>
  </tr> 
 % if( $is_editor ){ 
  <tr><td>&nbsp;</td>
   <td>
    %= submit_button ml 'Update'
    |
    <%= link_to "/$controller/files/$payload" => begin %><%= ml 'Cancel' %><% end %>
   </td>
  </tr>
 % } 
 % end
 %= form_for "/$controller/files_update_file/$payload?fileid=$fileid" => (enctype => 'multipart/form-data') => ( method => 'POST') => begin
 %= hidden_field "redirect_to" => "/$controller/files_update/$payload?fileid=$fileid"
  <tr style="background: white;"><td>&nbsp;</td><td>&nbsp;</td></tr> 
  <tr>
   <td class='tar'><%= ml 'File' %></td>
   <td>
    <strong><a target="_blank" href='<%= "/files/download/$payload?fileid=$fileid&prefix=$controller" %>'><%= stash 'file_name' %></a></strong>
   </td>
  </tr> 
 % if( $is_editor ){ 
  <tr><td>&nbsp;</td>
   <td>
    %= file_field 'new_file'
   </td>
  </tr> 
  <tr><td>&nbsp;</td>
   <td>
    %= submit_button ml 'Update'
    |
    <%= link_to "/$controller/files/$payload" => begin %><%= ml 'Cancel' %><% end %>
   </td>
  </tr>
 % } 
 % end
  <tr style="background: white;"><td>&nbsp;</td><td>&nbsp;</td></tr> 
  <tr>
   <td>
   </td>
   <td class='tar'>
    % if( $is_editor ){ 
     %= link_to ml('Delete') => "/$controller/files_del/$payload?fileid=$fileid" ;
    % } else {
     &nbsp;
    % }
   </td>
  </tr>
 </table>
</div>

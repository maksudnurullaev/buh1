% layout 'default';
<h2><%= ml 'Guides' %></h2>
<% my $admin = check_for('admin'); %>
% if( $admin ) { 
 <div class="toolbar">
  %= link_to ml('Add') => 'add' ; 
 </div>
% } 
% $guides = stash('guides') ;
% if( $guides ){
 <ul>
  % for my $key (sort keys %{$guides}) {
   <li>
    <%= link_to $guides->{$key}{file_name} => "edit/$key" %>
    % if( exists $guides->{$key}{desc} && $guides->{$key}{desc} ){
     <ul><li><i><%= $guides->{$key}{desc} %></i></li></ul>
    % } 
   </li>
  % }
 </ul> 
% } else {
 <div class="footer"><%= ml 'No data!' %></div>
% }

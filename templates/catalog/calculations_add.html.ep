% layout 'default';
%= include 'success_error' ;
<h2><%= ml 'Catalog' %> | <%= ml 'Calculations' %> | <%= ml 'Add' %></h2>

%= include 'catalog/toolbar' ;

<div class="toolbar">
 <%= ml 'Name' %>:
 <strong>
  %= link_to stash('description') => "/catalog/edit/$payload" 
 </strong>
</div>

<div class="toolbar">
<h3><%= ml 'New' %></h3>
<div class="form">
 %= form_for "/catalog/calculations_add/$payload" => (method => 'POST') => begin
 %= hidden_field oname => 'calculation' ;
 <table class='colortable'>
  <tr>
   <td class='tar'> 
    %= ml 'Description' 
   </td>
   <td>
    %= text_area description => (stash 'description'), class => (stash 'description_class') 
   </td>
  </tr>
  % if( stash('calculation_templates') ){
  <tr>
   <td class='tar'> 
    %= ml 'Templates' 
   </td>
   <td>
    %= check_box use_template => 1, id => 'use_template', style => 'width:auto;' ;
    <label for="use_template"><%= ml 'Use template' %></label>
    <br />
    %= select_field calculation_template => stash('calculation_templates') ;
   </td>
  </tr>
  % }
  <tr><td>&nbsp;</td>
   <td>
    %= submit_button ml('Add') ;
    | <%= link_to "/catalog/calculations/$payload" => begin %><%= ml 'Cancel' %><% end %>
   </td>
  </tr>
 </table>
 % end
</div>

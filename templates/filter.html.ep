<div>
 % my $path = $self->req->url->path->to_string() ;
 %= form_for "/filter/filter?path=$path" => ( method => 'POST' ) => begin
  %= text_field filter => session("$path/filter") ;
  %= submit_button ml 'Filter' ;
  %= tag 'a', href => "/filter/nofilter?path=$path",  ml("Reset") ;
 % end 
</div>


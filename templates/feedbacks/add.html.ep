% layout 'default';
<h2><%= ml 'Feedback' %></h2>
% if( defined stash( 'error' ) ) { 
<div class='alert error'>
%= ml 'Error!' 
</div>
% } 
% if( stash 'success' ) { 
<div class='alert success'><%= ml 'Message sent' %>!</div>
%= link_to ml('Again') => '/feedbacks/add';
% } else { 
  %= include 'feedbacks/form';
% }

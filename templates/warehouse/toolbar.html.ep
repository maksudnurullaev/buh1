% my $has_objects = stash('objects') && scalar(keys %{stash('objects')});
<div class="toolbar">
% if( who_is_local('writer') ) {
 %= link_to ml('Add') => "/$controller/add" ; 
 %= '|' if $has_objects ;
% } 
% if ( $has_objects ) {
 %= link_to ml('Remains') => '/warehouse/remains_all' ;
 | <%= ml 'Export' %>:
 %= link_to ml('Current list') => ('/warehouse/export_current?path=' . full_url()), target => '_blank'  ;
 %= link_to ml('All') => '/warehouse/export_all', target => '_blank' ;
% }
</div>

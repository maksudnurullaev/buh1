<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <title>buh1 v0.0.1a</title>
  <link rel="stylesheet" type="text/css" href="/style.css" />
</head>

<body>
  <div id="headerSection">
    <a href="http://buh1.uz/"><img src="/buh1_logo.png" alt="The B.U.H.1." align="left" border="0" /></a>
    <div class="topBanner" id="ad_banner">
      <% my $user = check_for('user'); %>
      <% my $admin = check_for('admin'); %>
      <% my $company = check_for("company name"); %>
      <%= ml 'You' %>: 
      % if($user) {
      <strong><%= $user %></strong>
      <sup><a href="/user/logout"><%= ml 'Logout' %></a></sup>
      % } else {
      <strong><%= ml 'Guest' %></strong>
      <sup><a href="/user/login"><%= ml 'Login' %></a></sup>
      % }
      &nbsp;&nbsp;|||&nbsp;&nbsp;
      <%= languages_bar %>
      <br /><br />
      % if ( $company ) {
       <span><small><u><%= $company %></u></small></span>
      % } 
    </div>
  </div>
  <div id="bodySection">
    <table border="0" cellspacing="0">
      <tbody>
        <tr>
          <td class="navleft" valign="top" width="20%">
            <ul id="leftnav">
              <li><%= ml 'Home' %>
               <ul><li><a href="/"><%= ml 'About us' %></a></li></ul>
               % if(!$admin) {
                <ul><li><a href="/feedbacks/add"><%= ml 'Feedback' %></a></li></ul>
               % }
              </li>
              % if($user) {
               <li><%= ml 'Cabinet' %>
                <ul><li><a href="/user/password"><%= ml 'Password' %></a></li></ul>
                % if( $admin ) {
                 <ul><li><a href="/users/list"><%= ml 'Users' %></a></li></ul>
                 <ul><li><a href="/companies/list"><%= ml 'Companies' %></a></li></ul>
                % }
                % if( $admin || is_editor ) {
                 <ul><li><a href="/feedbacks/list"><%= ml 'Feedbacks' %></a></li></ul>
                % }
               </li>
              % }              
              <li><%= ml 'Guides' %>
               <ul><li><a href="/accounts/list"><%= ml 'Chart of Accounts' %></a></li></ul>
               <ul><li><a href="/operations/list"><%= ml 'Business transactions' %></a></li></ul>
              </li>
              % if( $user && !$admin ) {
               <li><%= ml 'Companies' %>
                <ul><li><a href="/desktop/select_company"><%= ml 'Select' %></a></li></ul>
               </li>
              % }
              % if( $company ) {
               <li><%= ml 'Desktop' %>
                <!-- ul><li><a href="/g_ledger/list"><%= ml 'General ledger' %></a></li></ul-->
                <ul><li><a href="/documents/list"><%= ml 'Documents' %></a></li></ul>
                <!--ul><li><a href="/g_ledger/list"><%= ml 'Reports' %></a></li></ul-->
               </li>
              % }              
            </ul>
          </td>
          <td class="body" valign="top" width="80%">
            <%= content %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div id="footerSection">
    <p>Copyright 2013, The NMK Foundation</p>
    <p>Generated: <%= localtime %></p>
  </div>
</body>
</html>

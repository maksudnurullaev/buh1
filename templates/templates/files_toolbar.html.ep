<div class="toolbar">
 % if( $action eq 'files_add_new' ){
  <%= tag 'a', href => begin %><%= ml 'Files' %><% end, "/$controller/files/$payload" %>
  |
  <%= ml 'New' %>  
 % } elsif( $action eq 'files_update' ) {
  <%= tag 'a', href => begin %><%= ml 'Files' %><% end, "/$controller/files/$payload" %>
 % } else {
  <%= ml 'Files' %>  
  |
  <%= tag 'a', href => begin %><%= ml 'New' %><% end, "/$controller/files_add_new/$payload" %>
 % }
</div>

% layout 'default';
<h2><%= ml 'Guides' %></h2>
%= include 'guides/toolbar' ;
% $guides = stash('guides') ;
% if( $guides ){
 <ul>
  % for my $key (sort keys %{$guides}) {
   <li>
    <%= link_to $key => "/guides/view/$key" %>
    % if( exists $guides->{$key}{desc} && $guides->{$key}{desc} ){
     <sup><%= $guides->{$key}{desc} %></sup>
    % } 
   </li>
  % }
 </ul> 
% } else {
 <div class="footer"><%= ml 'No data!' %></div>
% }


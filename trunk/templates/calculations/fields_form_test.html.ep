<div class="form">
 <table class='colortable'>
  <tr><td>&nbsp;</td>
   <td>
    <strong><%= stash 'description' %></strong>
   </td>
  </tr>
  %= include 'calculations/fields_form_splitter', title => 'Fields' ; 
  %= form_for full_url() => (method => 'POST') => begin
  %= hidden_field 'description' => stash('description') ;
  % my $field_index = 1 ;
  % while( stash("f_description_$field_index") ){
   %= include 'calculations/fields_form_row', disabled => 1, index => $field_index, title => 'Name' , name => "f_description_$field_index", value => stash("f_description_$field_index") ;
   %= include 'calculations/fields_form_row', index => $field_index, title => 'Value', name => "f_value_$field_index", value => stash("f_value_$field_index") ;
   % $field_index++ ; 
  % } 
  %= include 'calculations/fields_form_footer_test' ;
  % end
 </table>
</div>


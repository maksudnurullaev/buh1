  % my $disabled = stash 'disabled'  ;
  <tr><td class='tar'>
   %= ml($title) . ' _' . ($index) ;
   </td><td>
    % if( $disabled ) {
     <u><%= $value %></u>
     %= hidden_field $name => $value ;
    % } else {
     %= text_field $name => $value ;
    % }
    % if( $name =~ /^f_value/ && stash("f_calculated_value_$index") ) {
      = <%= stash "f_calculated_value_$index" %>
    % } 
  </td></tr>
